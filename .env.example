# =============================================================================
# CreatorIQ Environment Variables Template
# Copy this file to .env and fill in your actual values
# =============================================================================

# =============================================================================
# Supabase Configuration
# Get from: https://app.supabase.com/project/_/settings/api
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# API Configuration
# =============================================================================
API_PORT=3001
NEXT_PUBLIC_API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3004

# =============================================================================
# YouTube/Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
# Required APIs:
#   - YouTube Data API v3
#   - YouTube Analytics API
#   - Google OAuth2 API
# =============================================================================
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/youtube/callback

# =============================================================================
# Instagram/Facebook OAuth
# Get from: https://developers.facebook.com/apps
# Required Permissions:
#   - instagram_basic
#   - instagram_manage_insights
#   - pages_show_list
#   - pages_read_engagement
# =============================================================================
FACEBOOK_APP_ID=your-app-id
FACEBOOK_APP_SECRET=your-app-secret
FACEBOOK_REDIRECT_URI=http://localhost:3001/instagram/callback

# =============================================================================
# Security Keys
# Generate with:
#   JWT_SECRET: openssl rand -base64 32
#   ENCRYPTION_KEY: openssl rand -hex 32
# =============================================================================
JWT_SECRET=your-jwt-secret-change-in-production
ENCRYPTION_KEY=your-64-char-hex-encryption-key

# =============================================================================
# OpenClaw AI API (Primary AI Provider)
# Get from: https://openclaw.ai/
# Used for: AI insights, code generation, automation scripts, content suggestions
# =============================================================================
OPENCLAW_API_KEY=your-openclaw-api-key
OPENCLAW_API_URL=https://api.openclaw.ai

# =============================================================================
# Groq AI API (Fallback AI Provider)
# Get from: https://console.groq.com/keys
# Used as fallback when OpenClaw is unavailable
# =============================================================================
GROQ_API_KEY=gsk_your-groq-api-key

# =============================================================================
# Optional: Monitoring & Error Tracking (Production)
# =============================================================================

# Sentry (Error Tracking)
# SENTRY_DSN=https://your-sentry-dsn

# Health Monitor Alert Webhook (Slack, Discord, etc.)
# ALERT_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =============================================================================
# Environment
# =============================================================================
NODE_ENV=development
